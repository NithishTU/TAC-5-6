# Application Configuration
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
LOG_LEVEL=INFO

# Database Configuration
# For SQLite (development)
DATABASE_URL=sqlite:///./devdash.db

# For PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/devdash

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/github/callback

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0

# Cloudflare R2 (optional - for screenshot storage)
CLOUDFLARE_R2_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY=
CLOUDFLARE_R2_SECRET_KEY=
CLOUDFLARE_R2_BUCKET_NAME=devdash-screenshots

# ADW Configuration
CLAUDE_CODE_PATH=/path/to/claude-code
GITHUB_PAT=your-github-personal-access-token

# Optional Integrations
E2B_API_KEY=
CLOUDFLARED_TUNNEL_TOKEN=
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
